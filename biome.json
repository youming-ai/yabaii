{
  "files": {
    "ignoreUnknown": true,
    "includes": ["src/**", "*.json", "*.js", "*.ts", "*.tsx", "*.mjs", "*.cjs"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "a11y": {
        "useSemanticElements": "off"
      }
    }
  }
}
