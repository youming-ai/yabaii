---
import BaseLayout from '../layouts/BaseLayout.astro';
import SearchBar from '../components/islands/SearchBar.jsx';
import ProductCard from '../components/ui/ProductCard.astro';
import { TrendingUp, Clock, Tag, Filter } from 'lucide-react';

// Mock deals data
const featuredDeals = [
  {
    id: '1',
    title: 'iPhone 15 Pro 256GB ナチュラルチタン',
    originalPrice: 159800,
    currentPrice: 129800,
    discount: 30000,
    discountPercent: 19,
    platform: 'Amazon',
    image: '/images/products/iphone-15-pro.jpg',
    rating: 4.8,
    reviewCount: 2341,
    url: '/products/1',
    category: '家電',
    endTime: '2024-12-31T23:59:59Z',
    featured: true,
    couponCode: 'IPHONE15OFF'
  },
  {
    id: '2',
    title: 'Sony WH-1000XM5 ワイヤレスノイズキャンセリングヘッドホン',
    originalPrice: 42900,
    currentPrice: 35800,
    discount: 7100,
    discountPercent: 17,
    platform: '楽天',
    image: '/images/products/sony-headphones.jpg',
    rating: 4.9,
    reviewCount: 892,
    url: '/products/2',
    category: '家電',
    endTime: '2024-12-15T23:59:59Z',
    featured: true
  },
  {
    id: '3',
    title: 'Nintendo Switch OLED 本体セット',
    originalPrice: 37980,
    currentPrice: 32980,
    discount: 5000,
    discountPercent: 13,
    platform: 'Yahoo!ショッピング',
    image: '/images/products/nintendo-switch.jpg',
    rating: 4.7,
    reviewCount: 1234,
    url: '/products/3',
    category: 'ゲーム',
    endTime: '2024-12-25T23:59:59Z',
    featured: true
  }
];

const categories = [
  { name: 'すべて', count: 234 },
  { name: '家電', count: 87 },
  { name: 'ファッション', count: 45 },
  { name: '食品・飲料', count: 32 },
  { name: 'ゲーム', count: 28 },
  { name: '美容・コスメ', count: 42 }
];

const timeLeft = (endDate) => {
  const now = new Date();
  const end = new Date(endDate);
  const diff = end - now;

  if (diff <= 0) return '終了';

  const days = Math.floor(diff / (1000 * 60 * 60 * 24));
  const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));

  if (days > 0) return `残り${days}日`;
  if (hours > 0) return `残り${hours}時間`;
  return '終了間近';
};
---

<BaseLayout
  title="特別セール・お得な情報 - Yabaii"
  description="限定割引、タイムセール、クーポン情報など、お得な買い物情報をご紹介。最大70%OFFの特別価格を見逃さないでください。"
>
  <div class="container py-8">
    {/* Header */}
    <div class="text-center mb-10">
      <div class="flex items-center justify-center mb-4">
        <Tag class="w-8 h-8 text-red-600 mr-2" />
        <h1 class="text-4xl font-bold text-gray-900">今日のお得な情報</h1>
      </div>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
        限定割引、タイムセール、クーポン情報など、見逃せないお得な買い物情報を毎日更新。
        最大70%OFFの特別価格で購入しよう！
      </p>

      {/* Search */}
      <div class="max-w-2xl mx-auto mb-8">
        <SearchBar client:load placeholder="お得な商品を検索..." />
      </div>

      {/* Stats */}
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto mb-12">
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600 mb-1">234</div>
          <div class="text-sm text-gray-600">本日のセール</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-green-600 mb-1">平均42%OFF</div>
          <div class="text-sm text-gray-600">平均割引率</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-purple-600 mb-1">12</div>
          <div class="text-sm text-gray-600">終了間近</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-red-600 mb-1">5</div>
          <div class="text-sm text-gray-600">限定クーポン</div>
        </div>
      </div>
    </div>

    <div class="flex flex-col lg:flex-row gap-8">
      {/* Sidebar */}
      <aside class="lg:w-64 flex-shrink-0">
        <div class="bg-white rounded-lg shadow-md p-6 sticky top-24">
          {/* Categories */}
          <div class="mb-8">
            <h3 class="font-semibold text-gray-900 mb-4 flex items-center">
              <Filter class="w-4 h-4 mr-2" />
              カテゴリー
            </h3>
            <ul class="space-y-2">
              {categories.map((category) => (
                <li key={category.name}>
                  <button class="w-full text-left px-3 py-2 text-sm rounded-md hover:bg-gray-50 transition-colors flex justify-between items-center">
                    <span class="text-gray-700">{category.name}</span>
                    <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">
                      {category.count}
                    </span>
                  </button>
                </li>
              ))}
            </ul>
          </div>

          {/* Sort Options */}
          <div class="mb-8">
            <h3 class="font-semibold text-gray-900 mb-4">並び順</h3>
            <select class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option value="discount">割引率が高い順</option>
              <option value="ending_soon">終了間近</option>
              <option value="price_low">価格が低い順</option>
              <option value="popular">人気順</option>
            </select>
          </div>

          {/* Alert Signup */}
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <h4 class="font-semibold text-blue-900 mb-2">お得情報アラート</h4>
            <p class="text-sm text-blue-700 mb-3">
              新着セール情報をメールでお知らせします
            </p>
            <button class="w-full px-3 py-2 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 transition-colors">
              無料登録
            </button>
          </div>
        </div>
      </aside>

      {/* Main Content */}
      <main class="flex-1">
        {/* Featured Deals */}
        <section class="mb-12">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-900 flex items-center">
              <TrendingUp class="w-6 h-6 text-red-600 mr-2" />
              今週の注目セール
            </h2>
            <span class="text-sm text-gray-500">
              {featuredDeals.length}件のお得な情報
            </span>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {featuredDeals.map((deal) => (
              <div key={deal.id} class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow overflow-hidden group">
                {/* Deal Badge */}
                <div class="relative">
                  <div class="absolute top-2 left-2 z-10 bg-red-600 text-white text-xs font-bold px-2 py-1 rounded-full">
                    {deal.discountPercent}% OFF
                  </div>
                  {deal.endTime && (
                    <div class="absolute top-2 right-2 z-10 bg-black bg-opacity-75 text-white text-xs px-2 py-1 rounded-full flex items-center">
                      <Clock class="w-3 h-3 mr-1" />
                      {timeLeft(deal.endTime)}
                    </div>
                  )}

                  {/* Image Placeholder */}
                  <div class="aspect-video bg-gray-200 group-hover:scale-105 transition-transform"></div>
                </div>

                <div class="p-4">
                  <div class="flex justify-between items-start mb-2">
                    <h3 class="font-semibold text-gray-900 text-sm line-clamp-2 group-hover:text-blue-600 transition-colors">
                      <a href={deal.url} class="hover:underline">
                        {deal.title}
                      </a>
                    </h3>
                  </div>

                  <div class="flex items-center justify-between mb-3">
                    <div class="flex items-center space-x-1">
                      <span class="text-yellow-400">★</span>
                      <span class="text-sm text-gray-600">{deal.rating}</span>
                      <span class="text-xs text-gray-400">({deal.reviewCount})</span>
                    </div>
                    <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">
                      {deal.platform}
                    </span>
                  </div>

                  <div class="mb-3">
                    <div class="flex items-baseline space-x-2">
                      <span class="text-gray-400 line-through text-sm">
                        ¥{deal.originalPrice.toLocaleString()}
                      </span>
                      <span class="text-2xl font-bold text-red-600">
                        ¥{deal.currentPrice.toLocaleString()}
                      </span>
                    </div>
                    <div class="text-sm text-green-600 font-semibold">
                      ¥{deal.discount.toLocaleString()} お得
                    </div>
                  </div>

                  {/* Coupon Code */}
                  {deal.couponCode && (
                    <div class="bg-yellow-50 border border-yellow-200 rounded-md p-2 mb-3">
                      <div class="flex items-center justify-between">
                        <span class="text-xs font-semibold text-yellow-800">クーポンコード:</span>
                        <code class="text-xs bg-yellow-100 text-yellow-900 px-2 py-1 rounded">
                          {deal.couponCode}
                        </code>
                      </div>
                    </div>
                  )}

                  <div class="flex space-x-2">
                    <a
                      href={deal.url}
                      class="flex-1 inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 transition-colors"
                    >
                      購入する
                    </a>
                    <button class="px-4 py-2 border border-gray-300 text-gray-700 text-sm rounded-md hover:bg-gray-50 transition-colors">
                      比較
                    </button>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </section>

        {/* Newsletter */}
        <section class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl p-8 text-center text-white">
          <h3 class="text-2xl font-bold mb-4">お得情報を見逃さない</h3>
          <p class="mb-6 max-w-2xl mx-auto">
            毎日新しいセール情報や限定クーポンをお届け。登録無料で最新のお得情報をゲット！
          </p>
          <div class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
            <input
              type="email"
              placeholder="メールアドレスを入力"
              class="flex-1 px-4 py-3 rounded-md text-gray-900 focus:outline-none focus:ring-2 focus:ring-white"
            />
            <button class="px-6 py-3 bg-white text-blue-600 font-semibold rounded-md hover:bg-gray-100 transition-colors">
              無料登録
            </button>
          </div>
        </section>
      </main>
    </div>
  </div>
</BaseLayout>
