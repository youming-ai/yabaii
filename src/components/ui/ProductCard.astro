---
import { Star, ExternalLink } from 'lucide-react';

export interface Props {
  product: {
    id: string;
    title: string;
    originalPrice: string;
    currentPrice: string;
    discount: string;
    platform: string;
    image: string;
    rating: number;
    url: string;
  };
}

const { product } = Astro.props;

function formatPrice(price: string) {
  return parseInt(price).toLocaleString('ja-JP');
}

function getRatingStars(rating: number) {
  const fullStars = Math.floor(rating);
  const hasHalfStar = rating % 1 >= 0.5;
  let stars = '';

  for (let i = 0; i < fullStars; i++) {
    stars += '★';
  }

  if (hasHalfStar && fullStars < 5) {
    stars += '☆';
  }

  return stars;
}
---

<div class="group bg-white rounded-2xl border border-gray-100 shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1 overflow-hidden">
  <div class="relative overflow-hidden aspect-[4/3]">
    <img
      src={product.image}
      alt={product.title}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    {product.discount && (
      <div class="absolute top-3 right-3 bg-red-500 text-white text-xs font-bold px-3 py-1.5 rounded-full shadow-md">
        -{product.discount}
      </div>
    )}
  </div>

  <div class="p-5">
    <div class="mb-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-600">
          {product.platform}
        </span>
        <div class="flex items-center space-x-1">
          <Star class="w-3.5 h-3.5 text-yellow-400 fill-current" />
          <span class="text-sm font-medium text-gray-900">{product.rating}</span>
        </div>
      </div>
      
      <h3 class="font-bold text-gray-900 text-lg leading-tight mb-1 line-clamp-2 group-hover:text-primary-600 transition-colors">
        <a href={product.url}>
          {product.title}
        </a>
      </h3>
    </div>

    <div class="space-y-4">
      <div class="flex items-baseline space-x-2">
        <span class="text-2xl font-bold text-primary-600">
          ¥{formatPrice(product.currentPrice)}
        </span>
        <span class="text-sm text-gray-400 line-through">
          ¥{formatPrice(product.originalPrice)}
        </span>
      </div>

      <div class="grid grid-cols-2 gap-3">
        <a
          href={product.url}
          class="btn btn-primary btn-sm w-full"
        >
          <span>詳細を見る</span>
          <ExternalLink class="w-3.5 h-3.5 ml-1.5" />
        </a>
        <button class="btn btn-outline btn-sm w-full">
          比較する
        </button>
      </div>
    </div>
  </div>
</div>
