---
import { Star, ExternalLink } from 'lucide-react';

export interface Props {
  product: {
    id: string;
    title: string;
    originalPrice: string;
    currentPrice: string;
    discount: string;
    platform: string;
    image: string;
    rating: number;
    url: string;
  };
}

const { product } = Astro.props;

function formatPrice(price: string) {
  return parseInt(price).toLocaleString('ja-JP');
}

function getRatingStars(rating: number) {
  const fullStars = Math.floor(rating);
  const hasHalfStar = rating % 1 >= 0.5;
  let stars = '';

  for (let i = 0; i < fullStars; i++) {
    stars += '★';
  }

  if (hasHalfStar && fullStars < 5) {
    stars += '☆';
  }

  return stars;
}
---

<div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-all duration-300 group">
  <div class="relative overflow-hidden rounded-t-lg">
    <img
      src={product.image}
      alt={product.title}
      class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
      loading="lazy"
    />
    {product.discount && (
      <div class="absolute top-2 right-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-full">
        -{product.discount}
      </div>
    )}
  </div>

  <div class="p-4">
    <div class="mb-3">
      <h3 class="font-semibold text-gray-900 text-lg mb-2 line-clamp-2 group-hover:text-blue-600 transition-colors">
        <a href={product.url} class="hover:underline">
          {product.title}
        </a>
      </h3>

      <div class="flex items-center space-x-2 text-sm">
        <div class="flex items-center">
          <Star class="w-4 h-4 text-yellow-400 fill-current" />
          <span class="ml-1 text-gray-600">{product.rating}</span>
        </div>
        <span class="text-gray-400">•</span>
        <span class="text-gray-500">{product.platform}</span>
      </div>
    </div>

    <div class="space-y-2">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-2">
          <span class="text-gray-400 line-through text-sm">
            ¥{formatPrice(product.originalPrice)}
          </span>
          <span class="text-2xl font-bold text-red-600">
            ¥{formatPrice(product.currentPrice)}
          </span>
        </div>
      </div>

      <div class="flex space-x-2">
        <a
          href={product.url}
          class="flex-1 inline-flex items-center justify-center space-x-1 px-4 py-2 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700 transition-colors"
        >
          <span>見る</span>
          <ExternalLink class="w-4 h-4" />
        </a>
        <button class="px-4 py-2 border border-gray-300 text-gray-700 text-sm rounded-lg hover:bg-gray-50 transition-colors">
          比較
        </button>
      </div>
    </div>
  </div>
</div>
